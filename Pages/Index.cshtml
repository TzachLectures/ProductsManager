@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4 text-center">Product Catalog</h1>
    <p class="text-center">Explore our wide range of products</p>

 <div style="display:flex; flex-wrap:wrap">
            @foreach (var product in Model.Products)
            {
                <partial name="./Shared/_ProductCard" model="product"/>

        <form method="post" asp-page-handler="Cart" asp-route-Id="@product.Id" class="d-inline">
            <button type="submit" class="btn @(Model.Cart.Contains(product.Id)? "btn-primary": "btn-light")">
                <i class="fa fa-cart-plus"></i>
            </button>
        </form>
            }
    </div>
    <a href="/AddProduct" class="btn btn-primary fixed-bottom-right">Add Product</a>
</div>
