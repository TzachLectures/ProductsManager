@page "{id:int}"
@model ProductsManager.Pages.EditProductModel
@{
}


<h2>Edit product</h2>
<form method="post">
    <input type="hidden" asp-for="Product.Id" />
    <div class="form-group">
        <label asp-for="Product.Name">Name</label>
        <input asp-for="Product.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Description">Description</label>
        <input asp-for="Product.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Price">Price</label>
        <input asp-for="Product.Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Product.Stock">Stock</label>
        <input asp-for="Product.Stock" class="form-control" type="number" />
        <span asp-validation-for="Product.Stock" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Product.Category">Category</label>
        <select class="form-select" asp-for="Product.Category" asp-items="Model.Categories"></select>
    </div>
    <button type="submit" class="btn btn-primary">Edit Product</button>
</form>